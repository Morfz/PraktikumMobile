<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.species.SpeciesDetailActivity">

    <ImageView
        android:id="@+id/imageSpeciesDetail"
        android:layout_width="211dp"
        android:layout_height="238dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameSpeciesDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/imageSpeciesDetail"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageSpeciesDetail"
        app:layout_constraintTop_toBottomOf="@+id/imageSpeciesDetail" />

    <TextView
        android:id="@+id/descSpeciesDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/nameSpeciesDetail"
        app:layout_constraintStart_toStartOf="@+id/nameSpeciesDetail"
        app:layout_constraintTop_toBottomOf="@+id/nameSpeciesDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>